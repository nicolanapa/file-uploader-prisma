<form action="/directory" method="POST" class="center">
    <input type="text" name="directoryName" id="directory-name" required />

    <input type="hidden" name="path"  value="<%= locals.path ? locals.path : "./drive" %>" readonly />
    
    <button type="submit"><img src="../../icons/newDirectory.svg" alt="Create a new Directory" width="28px" height="auto"></button>
</form>
